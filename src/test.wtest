import peligroPorDistraccion.*

describe "tests de homero"
{
	test "homero está distraído cuando tiene pocas donas"
	{	
		homero.comprarDonas() // Tiene 12 donas
		homero.comerDonas() // 11
		homero.comerDonas() // 10
		homero.comerDonas() // 9
		homero.comerDonas() // 8
		homero.comerDonas() // 7
		homero.comerDonas() // 6
		homero.comerDonas() // 5
		homero.comerDonas() // 4
		homero.comerDonas() // 3
		homero.comerDonas() // 2
		homero.comerDonas() // 1
		assert.that(homero.estaDistraido())
	}
	
	test "homero no está distraído cuando tiene suficientes donas"
	{
		homero.comprarDonas() // Tiene 12 donas
		homero.comerDonas() // 11
		homero.comerDonas() // 10
		homero.comerDonas() // 9
		homero.comerDonas() // 8
		homero.comerDonas() // 7
		homero.comerDonas() // 6
		homero.comerDonas() // 5
		homero.comerDonas() // 4
		homero.comerDonas() // 3
		homero.comerDonas() // 2
		assert.notThat(homero.estaDistraido())
	}
}

describe "tests de lenny"
{
	test "lenny está distraído cuando tomó mucha cerveza"
	{
		lenny.tomarCerveza() // Bebe 1 cerveza
		lenny.tomarCerveza() // 2
		lenny.tomarCerveza() // 3
		lenny.tomarCerveza() // 4
		assert.that(lenny.estaDistraido())
	}
	
	test "lenny no está distraido cuando tomó poca cerveza"
	{
		lenny.tomarCerveza() // Bebe 1 cerveza
		lenny.tomarCerveza() // 2
		lenny.tomarCerveza() // 3
		assert.notThat(lenny.estaDistraido())
	}
}

describe "tests de planta nuclear"
{
	test "condiciones iniciales"
	{
		assert.notThat(plantaNuclear.estaEnPeligro())
		assert.that(plantaNuclear.empleadoEstaDistraido())
		assert.notThat(mrBurns.seQuedoPobre())
	}
	
	test "la planta nuclear con burns pobre está en peligro"
	{
		mrBurns.despojarseRiquezas()
		
		assert.that(plantaNuclear.estaEnPeligro())
	}
	
	test "la planta nuclear con pocas barras no está en peligro"
	{
		plantaNuclear.traerBarrasUranio(10000)

		assert.notThat(plantaNuclear.estaEnPeligro())
	}
	
	test "la planta nuclear con muchas barras y un empleado distraído está en peligro"
	{
		plantaNuclear.traerBarrasUranio(10001)
		
		assert.that(plantaNuclear.estaEnPeligro())
	}
}